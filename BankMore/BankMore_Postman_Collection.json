{
	"info": {
		"_postman_id": "bankmore-api-collection",
		"name": "BankMore API",
		"description": "Coleção de endpoints para o Banco Digital da Ana - BankMore",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{jwt_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Contas",
			"item": [
				{
					"name": "Cadastrar Conta",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"cpf\": \"12345678901\",\n  \"nome\": \"João Silva\",\n  \"senha\": \"minhasenha123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/contas/cadastrar",
							"host": ["{{base_url}}"],
							"path": ["contas", "cadastrar"]
						}
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('jwt_token', response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"cpfOuNumeroConta\": \"12345678901\",\n  \"senha\": \"minhasenha123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/contas/login",
							"host": ["{{base_url}}"],
							"path": ["contas", "login"]
						}
					},
					"response": []
				},
				{
					"name": "Consultar Saldo",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/contas/saldo",
							"host": ["{{base_url}}"],
							"path": ["contas", "saldo"]
						}
					},
					"response": []
				},
				{
					"name": "Inativar Conta",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"senha\": \"minhasenha123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/contas/inativar",
							"host": ["{{base_url}}"],
							"path": ["contas", "inativar"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Movimentações",
			"item": [
				{
					"name": "Crédito",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"chaveIdempotencia\": \"{{$guid}}\",\n  \"valor\": 100.00,\n  \"tipoMovimento\": \"C\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/movimentacoes",
							"host": ["{{base_url}}"],
							"path": ["movimentacoes"]
						}
					},
					"response": []
				},
				{
					"name": "Débito",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"chaveIdempotencia\": \"{{$guid}}\",\n  \"valor\": 50.00,\n  \"tipoMovimento\": \"D\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/movimentacoes",
							"host": ["{{base_url}}"],
							"path": ["movimentacoes"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Transferências",
			"item": [
				{
					"name": "Realizar Transferência",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"chaveIdempotencia\": \"{{$guid}}\",\n  \"numeroContaDestino\": 2,\n  \"valor\": 25.00\n}"
						},
						"url": {
							"raw": "{{base_url}}/transferencias",
							"host": ["{{base_url}}"],
							"path": ["transferencias"]
						}
					},
					"response": []
				}
			]
		}
	]
}

